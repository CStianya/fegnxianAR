<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/background_color"
    android:orientation="vertical">
    <include
        android:id="@+id/mainHead"
        layout="@layout/activity_base"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white"
        android:orientation="horizontal">

        <LinearLayout style="@style/normalLinearLayoutStyle">

            <TextView
                style="@style/normalTextStyle"
                android:text="昵称" />

            <com.riskmanagement.utils.ClearEditText
                android:id="@+id/et_modify_nickname"
                style="@style/normalHintTextStyle"
                android:hint="@string/username"
                android:inputType="text" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_modify_nickname"
        style="@style/normalSubmitButtonStyle"
        android:text="修改" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/icon_build" />
    </RelativeLayout>
</LinearLayout>