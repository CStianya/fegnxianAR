                android:textColorHint="@color/colorHint">

                <EditText
                    android:id="@+id/et_full_signature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:hint="全员签名"
                    android:inputType="textMultiLine"
                    android:minLines="5"
                    android:maxLines="8"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorHint">

                <EditText
                    android:id="@+id/et_compiling_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="编制人（作业负责人）"
                    android:inputType="text"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorHint">

                <EditText
                    android:id="@+id/et_auditor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="审核人（安全、技术）"
                    android:inputType="text"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorHint">

                <EditText
                    android:id="@+id/et_security_guardian2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="安全监护人"
                    android:inputType="text"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorHint">

                <EditText
                    android:id="@+id/et_issuer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="签发人（施工项目部经理）"
                    android:inputType="text"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorHint">

                <EditText
                    android:id="@+id/et_issue_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="签发日期"
                    android:inputType="datetime"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorHint">

                <EditText
                    android:id="@+id/et_supervisor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="监理人员（三级及以上风险）"
                    android:inputType="datetime"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorHint">

                <EditText
                    android:id="@+id/et_project_manager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="业主项目部经理（四级及以上风险）"
                    android:inputType="text"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorHint">

                <EditText
                    android:id="@+id/et_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="备注"
                    android:inputType="text"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_form2_next"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_gravity="bottom|center"
                android:text="下一步" />
