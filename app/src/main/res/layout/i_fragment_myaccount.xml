<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="我的账户"
            android:textColor="@color/ilou_text_color"
            android:textSize="@dimen/top_bar_title" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="@mipmap/profile_bg"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_myAccount_userImage"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:src="@mipmap/icon_user_defalut_avatar" />

                <TextView
                    android:id="@+id/tv_myAccount_userName"
                    android:layout_width="160dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/i_shape_immediately_login"
                    android:gravity="center"
                    android:text="@string/immediately_login"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_white"
                android:orientation="vertical">


                <View style="@style/normalLineStyle" />



                <LinearLayout
                    android:id="@+id/i_myaccount_personal_ll"
                    style="@style/myAccountLinearLayoutStyle">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/icon_profile" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:textColor="@color/ilou_text_color"
                        android:textSize="@dimen/text_size"
                        android:text="个人资料"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/icon_arrow_right" />
                </LinearLayout>

                <View style="@style/normalLineStyle" />

                <LinearLayout
                    android:id="@+id/ll_moreServices"
                    style="@style/myAccountLinearLayoutStyle">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/icon_feedback" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:text="意见反馈"
                        android:textColor="@color/ilou_text_color"
                        android:textSize="@dimen/text_size" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/icon_arrow_right" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>